<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_dimensions_rows" />

    <Spinner
        android:id="@+id/dialog_dimensions_rows"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dialog_dimensions_cols" />

    <Spinner
        android:id="@+id/dialog_dimensions_cols"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>